{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "displayName": "Windows x64 Debug",
      "description": "Target Windows with the Visual Studio development environment.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${preset.name}",
      "installDir": "${sourceDir}/out/install/${preset.name}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_POLICY_DEFAULT_CMP0091": "NEW",

        // 자신의 vcpkg 설치 경로에 있는 scripts/buildsystems/vcpkg.cmake 파일 경로 지정
        // "CMAKE_TOOLCHAIN_FILE": "E:\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake",
        "CMAKE_TOOLCHAIN_FILE": "E:/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}